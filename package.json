{
  "name": "root",
  "private": true,
  "scripts": {
    "audit": "npm audit fix && lerna-audit",
    "rebuild": "npm run clean && npm install && npm run build",
    "clean": "npx lerna clean -y",
    "postinstall": "npx lerna bootstrap",
    "test": "jest",
    "build": "npx lerna run build",
    "lerna:publish": "npx lerna publish from-package --yes ",
    "lerna:publish-next": "npx lerna publish --canary --include-merged-tags --preid next --dist-tag next --pre-dist-tag next --no-push --no-git-tag-version --no-git-reset --force-publish --yes"
  },
  "devDependencies": {
    "@types/jest": "27.0.1",
    "@types/node": "12.12.34",
    "fs-extra": "8.1.0",
    "husky": "7.0.4",
    "jest": "27.2.0",
    "lerna": "4.0.0",
    "lerna-audit": "1.3.3",
    "prettier": "2.5.1",
    "pretty-quick": "3.1.3",
    "ts-jest": "27.0.5",
    "typescript": "4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
